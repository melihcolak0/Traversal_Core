@model DTOLayer.DTOs.ContactDTOs.SendMessageDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bize Ulaşın</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index">Home</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Bize Ulaşın </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        @foreach (var item in (List<Contact>)ViewBag.contactInformations)
        {
            <div class="container py-lg-3">
                <div class="contact-grids row">
                    <div class="col-lg-6 contact-left">
                        <div class="partners">
                            <div class="cont-details">
                                <h5>Bize Ulaşın </h5>
                                <p class="mt-3 mb-4">
                                    @item.Description
                                </p>
                            </div>
                            <div class="hours">
                                <h6 class="mt-4">E-Mail:</h6>
                                <p>
                                    <a href="#">
                                        @item.Mail
                                    </a>
                                </p>
                                <h6 class="mt-4">Adres:</h6>
                                <p> @item.Address</p>
                                <h6 class="mt-4">Telefon Numarası:</h6>
                                <p class="margin-top"><a href="#">@item.Phone</a></p>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                        <form method="post" class="signin-form">
                            <div class="input-grids">
                                <div class="form-group">
                                    <input type="text" asp-for="Name" placeholder="Adınız ve Soyadınız*" class="contact-input" />
                                    <span asp-validation-for="Name" style="color:red"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" asp-for="Mail" placeholder="Mail Adresiniz*" class="contact-input" />
                                    <span asp-validation-for="Mail" style="color:red"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="Subject" placeholder="Konu*" class="contact-input" />
                                    <span asp-validation-for="Subject" style="color:red"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea asp-for="MessageContent" placeholder="Mesajınız*"></textarea>
                                <span asp-validation-for="MessageContent" style="color:red"></span>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-style btn-primary">Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="map mt-5 pt-md-5">
                    <h5>Harita</h5>
                    <iframe src="@item.MapLocation" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        }
    </div>
</section>