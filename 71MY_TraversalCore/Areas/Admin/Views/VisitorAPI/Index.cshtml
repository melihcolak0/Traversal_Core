@model List<VisitorAPIViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a href="/Admin/Dashboard/Index">Dashboard</a></span>/ Ziyaretçi API</h4>
    <div class="card">
        <h5 class="card-header">Ziyaretçi API</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ADI</th>
                        <th>SOYADI</th>
                        <th>ŞEHİR</th>
                        <th>ÜLKE</th>
                        <th>MAIL</th>
                        <th>SİL</th>
                        <th>GÜNCELLE</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VisitorId</td>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.City</td>
                            <td>@item.Country</td>
                            <td>@item.Mail</td>
                            <td><a href="/Admin/VisitorAPI/DeleteVisitor/@item.VisitorId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Admin/VisitorAPI/UpdateVisitor/@item.VisitorId" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/VisitorAPI/AddVisitor" class="btn btn-primary">Yeni Ziyaretçi Ekle</a>
        </div>
    </div>
</div>
