@model IEnumerable<HotelSearchAPIViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a href="/Admin/Dashboard/Index">Dashboard</a></span>/ Otel Rezervasyon Sayfası</h4>
    <div class="card">
        <h5 class="card-header">Paris/Fransa için Oteller</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>                        
                        <th>OTEL ADI</th>
                        <th>OTEL PUANI</th>
                        <th>OTEL DEĞERLENDİRMESİ</th>
                        <th>DETAYLAR</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.hotel_name</td>
                            <td>@item.review_score</td>
                            <td>@item.review_score_word</td>
                            <td><a href="#" class="btn btn-outline-warning">Detaylar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
