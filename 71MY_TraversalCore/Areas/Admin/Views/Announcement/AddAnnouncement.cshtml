@model AddAnnouncementDTO
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a href="/Admin/Announcement/Index">Duyurular</a></span>/ Yeni Duyuru Ekleme Sayfası</h4>
    <div class="col-md-12">
        <div class="card mb-4">
            <h5 class="card-header">Yeni Duyuru Ekle</h5>
            <div class="card-body">
                <form method="post">
                    <div>
                        <label class="form-label">BAŞLIK</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <span asp-validation-for="Title" style="color: red"></span>
                    </div>
                    <br />
                    <div>
                        <label class="form-label">İÇERİK</label>
                        <input type="text" class="form-control" asp-for="Content" />
                        <span asp-validation-for="Content" style="color: red"></span>
                    </div>                    
                    <br />
                    <button class="btn btn-primary">Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>
