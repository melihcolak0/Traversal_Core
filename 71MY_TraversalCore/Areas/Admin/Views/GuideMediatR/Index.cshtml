@model List<_71MY_TraversalCore.CQRS.Results.GuideResults.GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a href="/Admin/Dashboard/Index">Dashboard</a></span>/ MediatR ile Rehberler</h4>
    <div class="card">
        <h5 class="card-header">Rehberler</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>REHBER</th>
                        <th>AÇIKLAMA</th>
                        <th>RESİM</th>
                        <th>SİL</th>
                        <th>GÜNCELLE</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.GuideId</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td><img src="@item.Image" class="rounded-circle" width="50" height="50" /></td>
                            <td><a href="/Admin/GuideMediatR/DeleteGuide/@item.GuideId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Admin/GuideMediatR/UpdateGuide/@item.GuideId" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/GuideMediatR/AddGuide" class="btn btn-primary">Yeni Rehber Ekle</a>
        </div>
    </div>
</div>
