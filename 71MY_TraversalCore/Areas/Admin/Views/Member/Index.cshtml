@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a href="/Admin/Dashboard/Index">Dashboard</a></span>/ Üyeler</h4>
    <div class="card">
        <h5 class="card-header">Üyeler</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ADI VE SOYADI</th>
                        <th>KULLANICI ADI</th>
                        <th>E-MAIL</th>
                        <th>SİL</th>
                        <th>DÜZENLE</th>
                        <th>YORUMLAR</th>
                        <th>TUR GEÇMİŞİ</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name @item.Surname</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td><a href="/Admin/Member/DeleteMember/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Admin/Member/UpdateMember/@item.Id" class="btn btn-outline-warning">Düzenle</a></td>
                            <td><a href="/Admin/Member/GetMemberComments/@item.Id" class="btn btn-outline-success">Yorumlar</a></td>
                            <td><a href="/Admin/Member/GetMemberReservationHistory/@item.Id" class="btn btn-outline-info">Tur Geçmişi</a></td>
                        </tr>
                    }
                </tbody>
            </table>            
            <br />
            <a href="/LogIn/Register" class="btn btn-primary">Yeni Üye Ekle</a>
        </div>
    </div>
</div>
