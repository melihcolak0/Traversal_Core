@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "MyReservationsApproved";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6>Onaylanmış Rezervasyonlar</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">#</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">LOKASYON</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">KİŞİ SAYISI</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">REZERVASYON TARİHİ</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">DURUM</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <p class="font-weight-bold text-xs mb-0">@item.ReservationId</p>
                                    </td>

                                    <td>
                                        <p class="font-weight-bold text-xs mb-0">@item.Destination.City</p>
                                    </td>
                                    <td>
                                        <p class="font-weight-bold text-xs mb-0">@item.PersonCount</p>
                                    </td>
                                    <td>
                                        <p class="font-weight-bold text-xs mb-0">@item.ReservationDate.ToString("dd MMM yyyy - HH:mm")</p>
                                    </td>
                                    <td>
                                        <p class="font-weight-bold text-xs mb-0">@item.Status</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
